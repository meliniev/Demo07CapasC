<Window x:Class="Demo07CapasC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CRUD Customer" Height="500" Width="800">

    <Grid Margin="10">
        <StackPanel>
            <!-- Inputs -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Name:" Width="80"/>
                <TextBox x:Name="txtName" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Address:" Width="80"/>
                <TextBox x:Name="txtAddress" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Phone:" Width="80"/>
                <TextBox x:Name="txtPhone" Width="200"/>
            </StackPanel>

            <!-- Botones -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Add" Width="80" Margin="5" Click="BtnAdd_Click"/>
                <Button Content="Update" Width="80" Margin="5" Click="BtnUpdate_Click"/>
                <Button Content="Delete" Width="80" Margin="5" Click="BtnDelete_Click"/>
                <Button Content="Refresh" Width="80" Margin="5" Click="BtnRefresh_Click"/>
            </StackPanel>

            <!-- Grid -->
            <DataGrid x:Name="dataGrid" AutoGenerateColumns="True" Height="300" SelectionMode="Single" SelectionChanged="DataGrid_SelectionChanged"/>
        </StackPanel>
    </Grid>
</Window>
